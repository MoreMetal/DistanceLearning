@page
@model DistanceLearning.Areas.Identity.Pages.User.LecturerUsersModel
@{
    ViewData["Title"] = "Список лекторов";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Имя</th>
                    <th scope="col">Почта</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Input.Users)
                {
                    <tr>
                        <th scope="row">@user.UserName</th>
                        <td>@user.Email</td>
                        <td>
                            <form method="post">
                                <button type="submit" class="btn btn-danger btn-sm" asp-route-userId="@user.Id">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>