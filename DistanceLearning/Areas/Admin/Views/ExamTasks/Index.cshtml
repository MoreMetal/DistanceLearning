@model IEnumerable<ExamTask>

@{
    ViewData["Title"] = "Задачи";
}

<section class="content">

    <!-- Default box -->
    <div class="card">
    <div class="card-header">
        <h3 class="card-title">Список</h3>

        <div class="card-tools">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i>
                Добавить
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                <th style="width: 20%">
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th style="width: 20%">
                    @*@Html.DisplayNameFor(model => model.CorrectAnswers)*@
                </th>
                <th style="width: 20%">
                    @Html.DisplayNameFor(model => model.ImageName)
                </th>
                <th style="width: 20%">
                    @Html.DisplayNameFor(model => model.TaskType)
                </th>
                <th style="width: 20%"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.CorrectAnswers)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskType.Name)
                </td>
                <td class="project-actions text-right">
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-folder">
                        </i>
                        Просмотр
                    </a>
                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Изменить
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash">
                        </i>
                        Удалить
                    </a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>